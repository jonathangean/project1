<ul>
  <h1>Users</h1>
<% @users.each do |user| %>
  <li>
    <a href="/users/<%= user.id %>"><%= user.username %></a>
  </li>
  <% end %>
  </ul>
<form action="/users" method='post'>
  <%= token_tag %>
  <input type="text" placeholder="New username" name='user[username]'>

  <input type="submit">
</form>
